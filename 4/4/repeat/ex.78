(define (simple-query query-pattern
                      frame)
   (amb (find-assertions query-pattern frame)
        (apply-rules query-pattern frame)))

; More instructive
(define (amb-loop op L)
 (if (null? L)
     (amb)
     (amb (op (car L))
          (amb-loop op (cdr L)))))

; Neat
(define (amb-loop op L)
 (require (not (null? L)))
 (amb (op (car L))
      (amb-loop op (cdr L))))

