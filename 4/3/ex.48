;Experimental
(define (parse-sentence)
  (define (maybe-compound sentence)
    (amb sentence
         (list 'compound-sentence
               sentence
               (parse-word conjunctions)
               (parse-sentence))))
  (maybe-compound
         (list 'sentence
               (parse-noun-phrase)
               (parse-verb-phrase))))

(define conjunctions
  '(conjunction and or but so))

